<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
        <li class="siderbar-item"><%= link_to "Modifier le profil", edit_user_registration_path, class: "sidebar-link active"%></li>
      </ul>
      <br/>
      <%= link_to "Voir mon profil", user_path(current_user.id), class: "btn btn-default"%>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Votre Profil</div>
      <div class="panel-body">
<div class="container">



        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'shared/devicemes' %>

          <div class="form-group">
            <%= f.text_field :fullname, autofocus: true, placeholder: "Nom", class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.text_field :phone_number, autofocus: true, placeholder: "Numéro de téléphone", class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, placeholder: "Description", class: "form-control"  %>
          </div>


          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control"  %>
          </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Nouveau mot de passe (laisser blanc si aucun changement)", class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmer Mot de passe", class: "form-control" %>
          </div>


          <div class="actions">
            <%= f.submit "Sauvegarder", class: "btn btn-normal btn-block" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
</div>
