<div class="panel panel-default">
  <div class="panel-heading">
    <span><i style="color: #ffb400"></i> €<%= @room.price %></span>
    <span class="pull-right">Par nuit</span>
  </div>
  <div class="panel-body">
    <%= form_for([@room, @room.reservations.new]) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <label>Check In</label>
          <%= f.text_field :start_date, readonly: true, placeholder: "Date de début", class: "form-control datepicker" %>
        </div>
        <div class="col-md-6">
          <label>Check Out</label>
          <%= f.text_field :end_date, readonly: true, placeholder: "Date de fin", class: "form-control datepicker" %>
        </div>
      </div>

      <h4 class="message-alert text-center"><span id="message"></span></h4>
      <div id="preview" style="display: none">
        <table class="reservation-table">
          <tbody>
            <tr>
              <td>Prix</td>
              <td class="text-right">$<%= @room.price %></td>
            </tr>
            <tr>
              <td>Nuitée(s)</td>
              <td class="text-right">x <span id="reservation_nights"></span></td>
            </tr>
            <tr>
              <td class="total">Total</td>
              <td class="text-right">$<span id="reservation_total"></span></td>
            </tr>
          </tbody>
        </table>
      </div>

      <br/>

      <%= f.submit "Réserver maintenant", id: "btn_book", class: "btn btn-normal btn-block"%>
    <% end %>
  </div>
</div>

